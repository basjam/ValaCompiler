<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="com.github.basjam.valacompiler" path="/com/github/basjam/valacompiler/" gettext-domain="ValaCompiler">
        <key name="last-folder" type="s">
            <default>""</default>
            <summary>Last source folder used</summary>
            <description>The last source folder used</description>
        </key>
        <key name="project-location" type="s">
            <default>""</default>
            <summary>Current source folder</summary>
            <description>The current working source folder</description>
        </key>
        <key name="valac-options" type="as">
            <default>[]</default>
            <summary>Options for valac</summary>
            <description>eg: [--pkg=gtk+-3.0, -X, -w ....]</description>
        </key>
        <key name="custom-compile-options" type="s">
            <default>""</default>
            <summary>custom compiling options</summary>
            <description>the bottom entry text for compiling options.</description>
        </key>
        <key name="gtk" type="b">
            <default>true</default>
            <summary>gtk+-3.0 package</summary>
            <description>add --pkg=gtk+-3.0 to the valac command.</description>
        </key>
        <key name="show-c-warnings" type="b">
            <default>false</default>
            <summary>Show c compile warnings</summary>
            <description>removes -X -w from valac, they silence c compile warnings.</description>
        </key>
        <key name="options-button" type="b">
            <default>true</default>
            <summary>Show options side pane</summary>
            <description>In project page</description>
        </key>
    </schema>
</schemalist>
